@{
    ViewBag.Title = "Habitación 1";
}

<div class="container">
    <h1>Primera pregunta</h1>
    
    <p>El brujo Slener te pregunta: ¿A que temperatura hierve el agua?</p>

    <form method="post" action="/Home/Habitacion">
        <input type="hidden" name="sala" value="1" />
        <input type="text" name="clave" placeholder="Ingresa tu respuesta" required />
        <button type="submit">Validar</button>
    </form>

    <div class="pistas">
        <button onclick="alert('Pista 1: diez elevado a la segunda potencia')">Pista 1</button>
        <button onclick="alert('Pista 2: 100')">Pista 2</button>
    </div>

    @if(ViewBag.Error != null)
    {
        <div class="error">
            <p>@ViewBag.Error</p>
        </div>
    }
</div>
